{% extends 'base.html.twig' %}

{% block title %}ContactMessage index{% endblock %}

{% block body %}
    <h1>ContactMessage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Sujet</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact_message in contact_messages %}
            <tr>
                <td>{{ contact_message.id }}</td>
                <td>{{ contact_message.pseudo }}</td>
                <td>{{ contact_message.email }}</td>
                <td>{{ contact_message.sujet }}</td>
                <td>{{ contact_message.message|raw}}</td>
                <td>
                    <a href="{{ path('contact_message_show', {'id': contact_message.id}) }}">show</a>
                    <a href="{{ path('contact_message_edit', {'id': contact_message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_message_new') }}">Create new</a>
{% endblock %}
