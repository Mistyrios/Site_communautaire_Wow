<form method="post" action="{{ path('user_delete', {'id': user.id}) }}"
      onsubmit="return confirm('Etes vous sur de vouloir supprimer cet utilisateur ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn" style="background-color: #343A40; color: white; margin-bottom: 20px">Supprimer</button>
</form>
