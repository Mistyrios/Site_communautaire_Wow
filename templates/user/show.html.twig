{% extends 'base.html.twig' %}

{% block title %}Wow Chronicles - {{ app.user.pseudo }}{% endblock %}

{% block body %}
    <h1 class="espaceCustom" >{{ user.pseudo }}</h1>

    <table class="table espaceCustom">
        <tbody>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo}}</td>
            </tr>
            <tr>
                <th>Adresse E-mail</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Compte vérifié</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="espaceCustom">
        <a href="{{ path('user_index') }}">Retour à la liste</a>

        <a href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
    </div>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
