{% extends 'base.html.twig' %}

{% block title %}Wow Chronicles - {{ article.titre }}{% endblock %}

{% block body %}
    <h1>{{ article.titre }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu | raw}}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.image }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="espaceCustom">
        <a href="{{ path('article_index') }}">Retour à la liste</a>

        <a href="{{ path('article_edit', {'id': article.id}) }}">Editer</a>
    </div>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
